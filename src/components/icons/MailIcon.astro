---
interface Props {
  size?: number;
  class?: string;
}

const { size = 24, class: className } = Astro.props;
---

<div class:list={["mail-icon", className]} style={`--size: ${size}px`}>
  <svg
    width={size}
    height={size}
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path class="envelope-path" d="M22 13V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v12c0 1.1.9 2 2 2h8"></path>
    <path class="letter-path" d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
    <path class="check-path" d="m16 19 2 2 4-4"></path>
  </svg>
</div>

<style>
  .mail-icon {
    display: inline-flex;
    cursor: pointer;
    width: var(--size);
    height: var(--size);
    transition: transform 0.2s ease;
  }

  .mail-icon:hover {
    transform: translateY(-2px);
  }

  .mail-icon svg {
    width: 100%;
    height: 100%;
  }

  .envelope-path,
  .letter-path {
    transition: stroke-dashoffset 0.3s ease;
  }

  .check-path {
    stroke-dasharray: 14;
    stroke-dashoffset: 14;
    opacity: 0;
    transform-origin: center;
  }

  .mail-icon:hover .envelope-path {
    animation: envelopePulse 0.6s ease;
  }

  .mail-icon:hover .letter-path {
    animation: letterFloat 0.6s ease;
  }

  .mail-icon:hover .check-path {
    animation: checkDraw 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.2s forwards;
  }

  @keyframes envelopePulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  @keyframes letterFloat {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-2px);
    }
  }

  @keyframes checkDraw {
    0% {
      stroke-dashoffset: 14;
      opacity: 0;
      transform: scale(0.8);
    }
    50% {
      opacity: 1;
    }
    100% {
      stroke-dashoffset: 0;
      opacity: 1;
      transform: scale(1);
    }
  }
</style>
