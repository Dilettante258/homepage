---
import SiteLayout from "../../layouts/SiteLayout.astro";
import { resolveLocale, messages, SUPPORTED_LOCALES } from "../../i18n/strings";
import { getFeaturedProjects } from "../../data/projects";

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];
const featured = getFeaturedProjects();
---

<SiteLayout locale={locale} t={t}>
  <section class="hero">
    <p class="eyebrow">Full-stack · Edge-ready · DX lover</p>
    <h1>{t.hero.title}</h1>
    <p class="lede">{t.hero.subtitle}</p>
    <div class="cta">
      <a class="btn" href={`/${locale}/projects`}>{t.hero.ctaPrimary}</a>
      <a class="ghost" href={`/${locale}/gallery`}>{t.hero.ctaGallery}</a>
      <a class="ghost" href={`/${locale}/about`}>{t.hero.ctaSecondary}</a>
    </div>
    <div class="chips">
      <span>TypeScript</span>
      <span>React</span>
      <span>Solid.js</span>
      <span>Astro</span>
      <span>Node.js</span>
    </div>
    <div class="socials">
      <a href="https://github.com/yiminghe" target="_blank" rel="noreferrer" aria-label="GitHub" class="social-link">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
        </svg>
      </a>
      <a href="mailto:hi@yiming.work" aria-label="Email" class="social-link">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="2" y="4" width="20" height="16" rx="2"/>
          <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
        </svg>
      </a>
    </div>
  </section>

  <div class="section-divider" aria-hidden="true">
    <div class="divider-line"></div>
  </div>

  <section class="projects-preview">
    <div class="section-header">
      <span class="section-label">{t.home.projectsTitle}</span>
      <p class="section-lede">{t.home.projectsSubtitle}</p>
    </div>
    <div class="preview-grid">
      {
        featured.map((item, idx) => (
          <div class="preview-card" style={`--i: ${idx};`}>
            <div class="preview-thumbnail">
              {item.cover ? (
                <img src={item.cover} alt={item.title[locale]} loading="lazy" />
              ) : (
                <div
                  class="preview-gradient"
                  style={`background: ${item.fallbackGradient};`}
                />
              )}
              <div class="thumbnail-shimmer" aria-hidden="true"></div>
              <span class="card-index">{String(idx + 1).padStart(2, '0')}</span>
            </div>
            <div class="preview-body">
              <h3>{item.title[locale]}</h3>
              <p class="preview-desc">{item.description[locale]}</p>
              <div class="preview-tech">
                {item.tech.map((techName) => (
                  <span>{techName}</span>
                ))}
              </div>
              <div class="preview-links">
                {item.links.live && (
                  <a
                    href={item.links.live}
                    target="_blank"
                    rel="noreferrer"
                    class="btn small"
                  >
                    {t.projects.viewProject}
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17L17 7"/><path d="M7 7h10v10"/></svg>
                  </a>
                )}
                {item.links.github && (
                  <a
                    href={item.links.github}
                    target="_blank"
                    rel="noreferrer"
                    class="ghost small"
                  >
                    {t.projects.viewCode}
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17L17 7"/><path d="M7 7h10v10"/></svg>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>
    <a class="view-all" href={`/${locale}/projects`}>
      <span>{t.projects.viewAll}</span>
      <svg class="view-all-arrow" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
    </a>
  </section>
</SiteLayout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 4rem 0 3rem;
    max-width: 640px;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 12px;
    color: var(--muted);
    margin: 0;
  }

  h1 {
    font-size: clamp(2.4rem, 4vw, 3.2rem);
    margin: 0.4rem 0 0.6rem;
    line-height: 1.15;
  }

  .lede {
    color: var(--muted);
    font-size: 1.1rem;
    line-height: 1.7;
    max-width: 50ch;
    margin: 0;
  }

  .cta {
    display: flex;
    gap: 0.8rem;
    margin-top: 1.8rem;
  }

  .btn,
  .ghost {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.8rem 1.4rem;
    border-radius: 999px;
    font-weight: 600;
    text-decoration: none;
    border: 1px solid var(--stroke);
    color: var(--text);
    transition:
      transform 0.18s ease,
      border-color 0.18s,
      background 0.18s,
      box-shadow 0.18s;
  }

  .btn {
    background: linear-gradient(120deg, var(--primary-bg), var(--accent-bg));
    border-color: var(--primary-border);
    box-shadow: 0 10px 40px var(--primary-glow);
  }

  .btn:hover,
  .ghost:hover {
    transform: translateY(-1px);
    border-color: var(--border-hover);
  }

  .ghost {
    background: var(--surface-hover);
  }

  .chips {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1.4rem;
  }

  .chips span {
    padding: 0.45rem 0.8rem;
    border-radius: 999px;
    border: 1px solid var(--stroke);
    color: var(--muted);
    font-size: 0.9rem;
    background: var(--surface);
  }

  .socials {
    display: flex;
    gap: 0.6rem;
    margin-top: 1.8rem;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 12px;
    border: 1px solid var(--stroke);
    color: var(--muted);
    background: var(--surface);
    text-decoration: none;
    transition:
      color 0.2s,
      border-color 0.2s,
      transform 0.2s,
      box-shadow 0.2s;
  }

  .social-link:hover {
    color: var(--text);
    border-color: var(--primary-border);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px var(--primary-glow);
  }

  /* ---- Section Divider ---- */
  .section-divider {
    padding: 1rem 0;
  }

  .divider-line {
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--primary-border) 20%,
      var(--stroke) 50%,
      var(--primary-border) 80%,
      transparent
    );
  }

  /* ---- Projects Preview ---- */
  .projects-preview {
    padding: 1.5rem 0 3rem;
  }

  .section-header {
    margin-bottom: 2rem;
  }

  .section-label {
    display: inline-block;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 11px;
    font-weight: 600;
    color: var(--primary);
    padding: 0.35rem 0.75rem;
    border-radius: 999px;
    border: 1px solid var(--primary-border);
    background: var(--primary-bg);
    margin-bottom: 0.6rem;
  }

  .section-lede {
    color: var(--muted);
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
  }

  .preview-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.2rem;
  }

  /* ---- Card ---- */
  .preview-card {
    border: 1px solid var(--stroke);
    border-radius: 16px;
    overflow: hidden;
    background: var(--surface-raised);
    animation: card-rise 0.6s cubic-bezier(0.16, 1, 0.3, 1) both;
    animation-delay: calc(var(--i) * 0.1s);
    transition:
      transform 0.25s cubic-bezier(0.16, 1, 0.3, 1),
      border-color 0.25s,
      box-shadow 0.35s;
  }

  @keyframes card-rise {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .preview-card:hover {
    transform: translateY(-4px) scale(1.005);
    border-color: var(--primary-border);
    box-shadow:
      0 20px 60px var(--primary-glow),
      0 0 0 1px var(--primary-border);
  }

  /* ---- Thumbnail ---- */
  .preview-thumbnail {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .preview-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .preview-card:hover .preview-thumbnail img {
    transform: scale(1.04);
  }

  .preview-gradient {
    width: 100%;
    height: 100%;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .preview-card:hover .preview-gradient {
    transform: scale(1.04);
  }

  .thumbnail-shimmer {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      105deg,
      transparent 30%,
      rgba(255, 255, 255, 0.08) 45%,
      rgba(255, 255, 255, 0.15) 50%,
      rgba(255, 255, 255, 0.08) 55%,
      transparent 70%
    );
    transform: translateX(-100%);
    transition: none;
    pointer-events: none;
  }

  .preview-card:hover .thumbnail-shimmer {
    transform: translateX(100%);
    transition: transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .card-index {
    position: absolute;
    bottom: 0.6rem;
    right: 0.6rem;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.04em;
    color: rgba(255, 255, 255, 0.7);
    background: rgba(0, 0, 0, 0.35);
    backdrop-filter: blur(6px);
    padding: 0.2rem 0.5rem;
    border-radius: 6px;
    font-variant-numeric: tabular-nums;
  }

  /* ---- Body ---- */
  .preview-body {
    padding: 1rem 1.2rem 1.2rem;
  }

  .preview-body h3 {
    margin: 0 0 0.35rem;
    font-size: 1.1rem;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .preview-desc {
    color: var(--muted);
    font-size: 0.88rem;
    line-height: 1.55;
    margin: 0 0 0.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .preview-tech {
    display: flex;
    gap: 0.35rem;
    flex-wrap: wrap;
    margin-bottom: 0.9rem;
  }

  .preview-tech span {
    padding: 0.25rem 0.55rem;
    border-radius: 6px;
    color: var(--muted);
    font-size: 0.75rem;
    font-weight: 500;
    background: var(--surface-tag);
    letter-spacing: 0.01em;
  }

  .preview-links {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .small {
    gap: 0.35rem;
    padding: 0.4rem 0.85rem;
    font-size: 0.82rem;
  }

  .small svg {
    flex-shrink: 0;
    opacity: 0.7;
    transition: transform 0.2s ease;
  }

  .small:hover svg {
    transform: translate(1px, -1px);
    opacity: 1;
  }

  /* ---- View All CTA ---- */
  .view-all {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1.6rem;
    padding: 0.7rem 1.3rem;
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    border: 1px solid var(--stroke);
    color: var(--text);
    background: var(--surface-hover);
    transition:
      transform 0.2s ease,
      border-color 0.2s,
      gap 0.25s ease,
      box-shadow 0.2s;
  }

  .view-all:hover {
    transform: translateY(-1px);
    border-color: var(--primary-border);
    gap: 0.75rem;
    box-shadow: 0 8px 30px var(--primary-glow);
  }

  .view-all-arrow {
    transition: transform 0.25s ease;
  }

  .view-all:hover .view-all-arrow {
    transform: translateX(3px);
  }

  @media (max-width: 600px) {
    .hero {
      padding: 2rem 0;
    }

    .cta {
      flex-wrap: wrap;
    }

    .preview-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
