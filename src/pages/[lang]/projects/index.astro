---
import SiteLayout from "../../../layouts/SiteLayout.astro";
import ListToolbar from "../../../components/ListToolbar.astro";
import {
  resolveLocale,
  messages,
  SUPPORTED_LOCALES,
} from "../../../i18n/strings";
import { projectItems, getAllProjectTags } from "../../../data/projects";

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];
const allTags = getAllProjectTags();
---

<SiteLayout
  locale={locale}
  t={t}
  title={`${t.projects.title} · Yiming`}
  description={t.projects.subtitle}
>
  <section class="panel">
    <div class="panel__header">
      <div>
        <p class="eyebrow">{t.projects.subtitle}</p>
        <h1>{t.projects.title}</h1>
      </div>
    </div>

    <ListToolbar
      tags={allTags}
      tagLabels={t.projects.tagLabels}
      filterAllLabel={t.projects.filterAll}
      sortByLabel={t.projects.sortBy}
      sortOptions={[
        { value: "default", label: t.projects.sortDefault },
        { value: "name-az", label: t.projects.sortNameAZ },
        { value: "name-za", label: t.projects.sortNameZA },
        { value: "newest", label: t.projects.sortNewest },
        { value: "oldest", label: t.projects.sortOldest },
      ]}
      layouts={["grid", "list"]}
      layoutLabels={{
        grid: t.projects.layoutGrid,
        list: t.projects.layoutList,
      }}
    />

    <div class="projects-container" data-layout="grid">
      {
        projectItems.map((item, idx) => (
          <div
            class="project-card"
            data-tags={item.tags.join(",")}
            data-title={item.title[locale]}
            data-date={item.createdAt}
            data-order={String(idx)}
            style={`view-transition-name: project-${item.slug};`}
          >
            <div class="card-thumbnail">
              {item.cover ? (
                <img src={item.cover} alt={item.title[locale]} loading="lazy" />
              ) : (
                <div
                  class="card-gradient"
                  style={`background: ${item.fallbackGradient};`}
                />
              )}
            </div>
            <div class="card-body">
              <h3>{item.title[locale]}</h3>
              <p class="card-desc">{item.description[locale]}</p>
              <div class="tech-chips">
                {item.tech.map((techName) => (
                  <span class="tech-chip">{techName}</span>
                ))}
              </div>
              <div class="card-links">
                {item.links.live && (
                  <a
                    href={item.links.live}
                    target="_blank"
                    rel="noreferrer"
                    class="card-link card-link--primary"
                  >
                    {t.projects.viewProject} ↗
                  </a>
                )}
                {item.links.github && (
                  <a
                    href={item.links.github}
                    target="_blank"
                    rel="noreferrer"
                    class="card-link"
                  >
                    {t.projects.viewCode} ↗
                  </a>
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </section>
</SiteLayout>

<script>
  import { initListControls } from "../../../scripts/list-controls";
  initListControls({
    containerSelector: ".projects-container",
    cardSelector: ".project-card",
  });
</script>

<style>
  .panel {
    margin-top: 1rem;
    border: 1px solid var(--stroke);
    border-radius: 20px;
    padding: 1.8rem;
    background: var(--surface);
    box-shadow: 0 30px 120px var(--shadow);
  }

  .panel__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 12px;
    color: var(--muted);
    margin: 0;
  }

  h1 {
    margin: 0.4rem 0;
  }

  /* ---- Projects Container ---- */
  .projects-container {
    margin-top: 1rem;
  }

  [data-layout="grid"] {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  [data-layout="list"] {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  [data-layout="list"] .project-card {
    display: grid;
    grid-template-columns: 220px 1fr;
    align-items: center;
    gap: 1.2rem;
  }

  [data-layout="list"] .card-thumbnail {
    height: 140px;
    aspect-ratio: auto;
  }

  .project-card[hidden] {
    display: none;
  }

  /* ---- Card Styles ---- */
  .project-card {
    border: 1px solid var(--stroke);
    border-radius: 14px;
    overflow: hidden;
    color: var(--text);
    background: var(--surface-raised);
    transition:
      transform 0.2s,
      border-color 0.2s,
      box-shadow 0.2s;
  }

  .project-card:hover {
    transform: translateY(-3px);
    border-color: var(--primary-border);
    box-shadow: 0 15px 80px var(--primary-glow);
  }

  .card-thumbnail {
    width: 100%;
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .card-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .card-gradient {
    width: 100%;
    height: 100%;
    min-height: 140px;
  }

  .card-body {
    padding: 1rem;
  }

  .card-body h3 {
    margin: 0 0 0.3rem;
    font-size: 1.05rem;
  }

  .card-desc {
    color: var(--muted);
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0 0 0.6rem;
  }

  .tech-chips {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
    margin-bottom: 0.8rem;
  }

  .tech-chip {
    padding: 0.3rem 0.6rem;
    border-radius: 999px;
    border: 1px solid var(--stroke);
    color: var(--muted);
    font-size: 0.8rem;
    background: var(--surface);
  }

  .card-links {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    padding: 0.4rem 0.8rem;
    border-radius: 999px;
    font-size: 0.85rem;
    text-decoration: none;
    border: 1px solid var(--stroke);
    color: var(--muted);
    background: var(--surface);
    transition:
      color 0.2s,
      border-color 0.2s,
      background 0.2s;
  }

  .card-link:hover {
    color: var(--text);
    border-color: var(--primary-border);
    background: var(--surface-hover);
  }

  .card-link--primary {
    background: linear-gradient(120deg, var(--primary-bg), var(--accent-bg));
    border-color: var(--primary-border);
    color: var(--text);
  }

  @media (prefers-reduced-motion: reduce) {
    ::view-transition-group(*),
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation-duration: 0.01ms !important;
    }
  }

  @media (max-width: 600px) {
    [data-layout="list"] .project-card {
      grid-template-columns: 1fr;
    }
  }
</style>
