---
import { getCollection } from "astro:content";
import SiteLayout from "../../../layouts/SiteLayout.astro";
import ListToolbar from "../../../components/ListToolbar.astro";
import { resolveLocale, messages, SUPPORTED_LOCALES } from "../../../i18n/strings";

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];

const posts = (
  await getCollection("blog", ({ data }) => data.locale === locale)
).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const allTags = [...new Set(posts.flatMap((p) => p.data.tags ?? []))];
---

<SiteLayout
  locale={locale}
  t={t}
  title={`${t.nav.blog} · Yiming`}
  description={t.blog.subtitle}
>
  <section transition:animate="fade">
    <div class="page-header">
      <p class="subtitle">{t.blog.subtitle}</p>
      <h1>{t.blog.title}</h1>
    </div>

    {posts.length > 0 && (
      <ListToolbar
        tags={allTags}
        filterAllLabel={t.blog.filterAll}
        sortByLabel={t.blog.sortBy}
        sortOptions={[
          { value: "default", label: t.blog.sortDefault },
          { value: "oldest", label: t.blog.sortOldest },
          { value: "name-az", label: t.blog.sortNameAZ },
          { value: "name-za", label: t.blog.sortNameZA },
        ]}
        layouts={["grid", "list"]}
        layoutLabels={{
          grid: t.blog.layoutGrid,
          list: t.blog.layoutList,
        }}
      />
    )}

    <div class="posts" data-layout="grid">
      {
        posts.map((post, idx) => (
          <a
            class="post"
            href={`/${locale}/blog/${post.slug}`}
            data-tags={(post.data.tags ?? []).join(",")}
            data-title={post.data.title}
            data-date={post.data.date.toISOString()}
            data-order={String(idx)}
          >
            <p class="eyebrow">
              {new Intl.DateTimeFormat(locale, { dateStyle: "medium" }).format(
                post.data.date,
              )}
            </p>
            <h3>{post.data.title}</h3>
            <p class="body">{post.data.description}</p>
            <div class="tags">
              {post.data.tags?.map((tag) => (
                <span>{tag}</span>
              ))}
            </div>
          </a>
        ))
      }
      {posts.length === 0 && <p class="muted">No posts yet.</p>}
    </div>
  </section>
</SiteLayout>

<script>
  import { initListControls } from "../../../scripts/list-controls";

  function setupListControls() {
    // 只在当前页面是 blog 列表页时初始化
    const container = document.querySelector(".posts");
    if (!container) return;

    // 使用双重 requestAnimationFrame 确保渲染完全完成
    requestAnimationFrame(() => {
      requestAnimationFrame(() => {
        initListControls({
          containerSelector: ".posts",
          cardSelector: ".post",
        });
      });
    });
  }

  // 初始化
  setupListControls();

  // View Transitions 导航后重新初始化
  document.addEventListener("astro:page-load", setupListControls);
</script>

<style>
  .page-header {
    padding: 2rem 0 0.5rem;
  }

  .subtitle {
    color: var(--muted);
    font-size: 0.9rem;
    margin: 0 0 0.3rem;
  }

  h1 {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 400;
    margin: 0;
    letter-spacing: -0.01em;
  }

  .body {
    color: var(--muted);
    line-height: 1.6;
  }

  /* ---- Posts Container ---- */
  .posts {
    margin-top: 1.2rem;
  }

  [data-layout="grid"] {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 0.75rem;
  }

  [data-layout="list"] {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .post[hidden] {
    display: none;
  }

  .post {
    display: block;
    padding: 1.2rem;
    text-decoration: none;
    color: var(--text);
    border: 1px solid var(--stroke);
    border-radius: 12px;
    transition: border-color 0.15s;
  }

  .post:hover {
    border-color: var(--border-hover);
  }

  .post h3 {
    font-family: var(--font-heading);
    font-weight: 400;
    margin: 0.3rem 0 0.2rem;
  }

  .tags {
    display: flex;
    gap: 0.3rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
  }

  .tags span {
    padding: 0.15rem 0.45rem;
    border-radius: 4px;
    background: var(--surface-tag);
    color: var(--muted);
    font-size: 0.75rem;
  }

  .muted {
    color: var(--muted);
  }

  @media (prefers-reduced-motion: reduce) {
    ::view-transition-group(*),
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation-duration: 0.01ms !important;
    }
  }
</style>
