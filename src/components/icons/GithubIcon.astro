---
interface Props {
  size?: number;
  class?: string;
}

const { size = 24, class: className } = Astro.props;
---

<div class:list={["github-icon", className]} style={`--size: ${size}px`}>
  <svg
    width={size}
    height={size}
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path
      class="body-path"
      d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
    ></path>
    <path class="tail-path" d="M9 18c-4.51 2-5-2-7-2"></path>
  </svg>
</div>

<style>
  .github-icon {
    display: inline-flex;
    cursor: pointer;
    width: var(--size);
    height: var(--size);
    transition: transform 0.2s ease;
  }

  .github-icon:hover {
    transform: scale(1.05);
  }

  .github-icon svg {
    width: 100%;
    height: 100%;
  }

  .body-path {
    stroke-dasharray: 200;
    stroke-dashoffset: 0;
    transform-origin: center;
    transition: stroke-dashoffset 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .tail-path {
    stroke-dasharray: 20;
    stroke-dashoffset: 0;
    transform-origin: left center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .github-icon:hover .body-path {
    animation: bodyPulse 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .github-icon:hover .tail-path {
    animation: tailWag 1.2s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  @keyframes bodyPulse {
    0% {
      stroke-dashoffset: 0;
    }
    50% {
      stroke-dashoffset: -40;
    }
    100% {
      stroke-dashoffset: 0;
    }
  }

  @keyframes tailWag {
    0%,
    100% {
      transform: rotate(0deg) translateX(0);
    }
    10% {
      transform: rotate(-8deg) translateX(-1px);
    }
    20% {
      transform: rotate(8deg) translateX(1px);
    }
    30% {
      transform: rotate(-6deg) translateX(-0.5px);
    }
    40% {
      transform: rotate(6deg) translateX(0.5px);
    }
    50% {
      transform: rotate(-3deg) translateX(-0.2px);
    }
    60% {
      transform: rotate(3deg) translateX(0.2px);
    }
    70% {
      transform: rotate(0deg) translateX(0);
    }
  }
</style>
