---
import SiteLayout from "../../layouts/SiteLayout.astro";
import { resolveLocale, messages, SUPPORTED_LOCALES } from "../../i18n/strings";
import { getFeaturedProjects } from "../../data/projects";

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];
const featured = getFeaturedProjects();
---

<SiteLayout locale={locale} t={t}>
  <section class="hero" transition:animate="fade">
    <h1>{t.hero.title}</h1>
    <p class="lede">{t.hero.subtitle}</p>
    <div class="cta">
      <a class="btn-primary" href={`/${locale}/projects`}>{t.hero.ctaPrimary}</a>
      <a class="btn-ghost" href={`/${locale}/gallery`}>{t.hero.ctaGallery}</a>
      <a class="btn-ghost" href={`/${locale}/about`}>{t.hero.ctaSecondary}</a>
    </div>
    <div class="socials">
      <a href="https://github.com/Dilettante258" target="_blank" rel="noreferrer" aria-label="GitHub" class="social-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
        </svg>
      </a>
      <a href="mailto:wang1m@outlook.com" aria-label="Email" class="social-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <rect x="2" y="4" width="20" height="16" rx="2"/>
          <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
        </svg>
      </a>
    </div>
  </section>

  <section class="projects-section" transition:animate="fade">
    <div class="section-header">
      <h2>{t.home.projectsTitle}</h2>
      <p class="section-desc">{t.home.projectsSubtitle}</p>
    </div>
    <div class="project-list">
      {
        featured.map((item) => (
          <article class="project-row">
            <div class="project-thumb">
              {item.cover ? (
                <img src={item.cover} alt={item.title[locale]} loading="lazy" />
              ) : (
                <div
                  class="project-gradient"
                  style={`background: ${item.fallbackGradient};`}
                />
              )}
            </div>
            <div class="project-info">
              <h3>{item.title[locale]}</h3>
              <p class="project-desc">{item.description[locale]}</p>
              <div class="project-meta">
                {item.tech.slice(0, 3).map((techName) => (
                  <span class="tech-tag">{techName}</span>
                ))}
              </div>
            </div>
            <div class="project-actions">
              {item.links.live && (
                <a href={item.links.live} target="_blank" rel="noreferrer" class="action-link">
                  {t.projects.viewProject} &rarr;
                </a>
              )}
              {item.links.github && (
                <a href={item.links.github} target="_blank" rel="noreferrer" class="action-link secondary">
                  {t.projects.viewCode}
                </a>
              )}
            </div>
          </article>
        ))
      }
    </div>
    <a class="view-all" href={`/${locale}/projects`}>
      {t.projects.viewAll} &rarr;
    </a>
  </section>
</SiteLayout>

<style>
  /* ---- Hero ---- */
  .hero {
    padding: 6rem 0 4rem;
    max-width: 600px;
  }

  h1 {
    font-family: var(--font-heading);
    font-size: clamp(2.2rem, 4.5vw, 3rem);
    font-weight: 400;
    line-height: 1.2;
    letter-spacing: -0.02em;
    margin: 0 0 1rem;
  }

  .lede {
    color: var(--muted);
    font-size: 1.05rem;
    line-height: 1.7;
    margin: 0;
  }

  .cta {
    display: flex;
    gap: 0.6rem;
    margin-top: 2rem;
  }

  .btn-primary,
  .btn-ghost {
    display: inline-flex;
    align-items: center;
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    transition: opacity 0.15s;
  }

  .btn-primary {
    background: var(--text);
    color: var(--bg);
    border: 1px solid var(--text);
  }

  .btn-primary:hover {
    opacity: 0.85;
  }

  .btn-ghost {
    color: var(--muted);
    border: 1px solid var(--stroke);
    background: transparent;
  }

  .btn-ghost:hover {
    color: var(--text);
    border-color: var(--border-hover);
  }

  .socials {
    display: flex;
    gap: 0.5rem;
    margin-top: 1.5rem;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    color: var(--muted);
    text-decoration: none;
    transition: color 0.15s;
  }

  .social-link:hover {
    color: var(--text);
  }

  /* ---- Projects Section ---- */
  .projects-section {
    border-top: 1px solid var(--stroke);
    padding: 3rem 0 2rem;
  }

  .section-header {
    margin-bottom: 2rem;
  }

  .section-header h2 {
    font-family: var(--font-heading);
    font-size: 1.6rem;
    font-weight: 400;
    margin: 0 0 0.4rem;
    letter-spacing: -0.01em;
  }

  .section-desc {
    color: var(--muted);
    font-size: 0.95rem;
    margin: 0;
  }

  .project-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .project-row {
    display: grid;
    grid-template-columns: 160px 1fr auto;
    align-items: center;
    gap: 1.5rem;
    padding: 1rem;
    border: 1px solid var(--stroke);
    border-radius: 12px;
    transition: border-color 0.15s;
  }

  .project-row:hover {
    border-color: var(--border-hover);
  }

  .project-thumb {
    width: 160px;
    aspect-ratio: 16 / 10;
    border-radius: 8px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .project-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .project-gradient {
    width: 100%;
    height: 100%;
  }

  .project-info h3 {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    font-weight: 400;
    margin: 0 0 0.3rem;
  }

  .project-desc {
    color: var(--muted);
    font-size: 0.88rem;
    line-height: 1.5;
    margin: 0 0 0.5rem;
  }

  .project-meta {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
  }

  .tech-tag {
    font-size: 0.75rem;
    color: var(--muted);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    background: var(--surface-tag);
  }

  .project-actions {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.3rem;
    flex-shrink: 0;
  }

  .action-link {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--text);
    text-decoration: none;
    white-space: nowrap;
    transition: color 0.15s;
  }

  .action-link.secondary {
    color: var(--muted);
    font-weight: 400;
  }

  .action-link:hover {
    color: var(--primary);
  }

  .view-all {
    display: inline-block;
    margin-top: 1.2rem;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--muted);
    text-decoration: none;
    transition: color 0.15s;
  }

  .view-all:hover {
    color: var(--text);
  }

  @media (max-width: 700px) {
    .hero {
      padding: 3rem 0 2rem;
    }

    .cta {
      flex-wrap: wrap;
    }

    .project-row {
      grid-template-columns: 1fr;
      gap: 0.8rem;
    }

    .project-thumb {
      width: 100%;
    }

    .project-actions {
      flex-direction: row;
      align-items: center;
    }
  }
</style>
