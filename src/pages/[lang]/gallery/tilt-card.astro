---
import SiteLayout from "../../../layouts/SiteLayout.astro";
import TiltCard from "../../../components/react/TiltCard.tsx";
import {
  resolveLocale,
  messages,
  SUPPORTED_LOCALES,
} from "../../../i18n/strings";
import { galleryItems } from "../../../data/gallery";

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];
const item = galleryItems.find((i) => i.slug === "tilt-card")!;
---

<SiteLayout
  locale={locale}
  t={t}
  title={`${item.title[locale]} · Dilettante258`}
  description={item.description[locale]}
>
  <section
    class="detail-panel"
    style={`view-transition-name: gallery-${item.slug};`}
  >
    <a class="back-link" href={`/${locale}/gallery`}>
      ← {t.gallery.backToGallery}
    </a>

    <div class="detail-header">
      <div>
        <div class="tags">
          {
            item.tags.map((tag) => (
              <span>{t.gallery.tagLabels[tag] ?? tag}</span>
            ))
          }
        </div>
        <h1>{item.title[locale]}</h1>
        <p class="desc">{item.description[locale]}</p>
      </div>
    </div>

    <div class="demo-area">
      <TiltCard client:only="react" />
    </div>
  </section>
</SiteLayout>

<style>
  .detail-panel {
    padding: 2rem 0;
  }

  .back-link {
    display: inline-block;
    color: var(--muted);
    text-decoration: none;
    font-size: 0.85rem;
    margin-bottom: 1rem;
    transition: color 0.15s;
  }

  .back-link:hover {
    color: var(--text);
  }

  .detail-header h1 {
    font-family: var(--font-heading);
    font-weight: 400;
    margin: 0.3rem 0 0.3rem;
  }

  .desc {
    color: var(--muted);
    line-height: 1.6;
    margin: 0;
  }

  .tags {
    display: flex;
    gap: 0.3rem;
    flex-wrap: wrap;
  }

  .tags span {
    padding: 0.15rem 0.45rem;
    border-radius: 4px;
    background: var(--surface-tag);
    color: var(--muted);
    font-size: 0.75rem;
  }

  .demo-area {
    margin-top: 1.5rem;
    border: 1px solid var(--stroke);
    border-radius: 10px;
    padding: 1.5rem;
    min-height: 260px;
  }
</style>
