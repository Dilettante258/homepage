---
import { getCollection } from "astro:content";
import SiteLayout from "../../../layouts/SiteLayout.astro";
import { resolveLocale, messages } from "../../../i18n/strings";
import TOC from "../../../components/TOC.astro";
import ArrowLeftIcon from "../../../components/icons/ArrowLeftIcon.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: {
      lang: post.data.locale,
      slug: post.slug.replace(new RegExp(`-${post.data.locale}$`), ""),
    },
    props: { post },
  }));
}

const { lang } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];

const { post } = Astro.props;

if (!post) {
  throw new Error(`Post not found for slug "${slug}" and locale "${locale}"`);
}

const { Content, headings } = await post.render();
---

<SiteLayout
  locale={locale}
  t={t}
  title={`${post.data.title} · Dilettante258`}
  description={post.data.description}
>
  <!-- <Debug content={headings} /> -->
  <article class="article">
    <a href={`/${locale}/blog`} class="back-link">
      <ArrowLeftIcon size={16} />
      {t.blog.backToBlog}
    </a>
    <p class="meta">
      {
        new Intl.DateTimeFormat(locale, { dateStyle: "medium" }).format(
          post.data.date,
        )
      } ·{" "}
      {post.data.tags?.join(" · ")}
    </p>
    <h1>{post.data.title}</h1>
    <p class="body lead">{post.data.description}</p>
    <div class="content">
      <Content />
    </div>
  </article>
  <TOC heading={headings} />
</SiteLayout>

<style>
  .article {
    padding: 2rem 0;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--muted);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    transition: color 0.15s;
  }

  .back-link:hover {
    color: var(--text);
  }

  .back-link svg {
    flex-shrink: 0;
  }

  .meta {
    font-size: 0.82rem;
    color: var(--muted);
    margin: 0;
    font-variant-numeric: tabular-nums;
  }

  h1 {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 2rem;
    letter-spacing: -0.01em;
    margin: 0.4rem 0 0;
  }

  .body.lead {
    margin: 0.6rem 0 2rem;
    font-size: 1.05rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--stroke);
  }

  .body,
  .content {
    color: var(--muted);
    line-height: 1.8;
  }

  /* ---- Headings ---- */
  .content :global(h1) {
    font-family: var(--font-heading);
    font-weight: 400;
    color: var(--text);
    font-size: 1.65rem;
    margin: 2.5rem 0 1rem;
  }

  .content :global(h2) {
    font-family: var(--font-heading);
    font-weight: 400;
    color: var(--text);
    font-size: 1.45rem;
    margin: 2.2rem 0 0.8rem;
    padding-bottom: 0.4rem;
    border-bottom: 1px solid var(--stroke);
  }

  .content :global(h3) {
    font-family: var(--font-heading);
    font-weight: 400;
    color: var(--text);
    font-size: 1.25rem;
    margin: 1.8rem 0 0.6rem;
  }

  .content :global(h4),
  .content :global(h5) {
    color: var(--text);
    font-size: 1.05rem;
    margin: 1.5rem 0 0.5rem;
  }

  /* ---- Paragraphs ---- */
  .content :global(p) {
    margin: 0 0 1rem;
  }

  /* ---- Links ---- */
  .content :global(a) {
    color: var(--primary);
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-color: rgba(196, 162, 101, 0.3);
    transition: text-decoration-color 0.15s;
  }

  .content :global(a:hover) {
    text-decoration-color: var(--primary);
  }

  /* ---- Code ---- */
  .content :global(pre) {
    padding: 1rem 1.2rem;
    border-radius: 8px;
    background: var(--surface-tag);
    overflow-x: auto;
    font-size: 0.85rem;
    line-height: 1.65;
    margin: 1.2rem 0;
    border: 1px solid var(--stroke);
  }

  .content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
  }

  .content :global(:not(pre) > code) {
    background: var(--surface-tag);
    padding: 0.15em 0.4em;
    border-radius: 4px;
    font-size: 0.85em;
    border: 1px solid var(--stroke);
  }

  /* ---- Blockquote ---- */
  .content :global(blockquote) {
    margin: 1.2rem 0;
    padding: 0.6rem 1rem;
    border-left: 3px solid var(--primary);
    background: var(--surface);
    border-radius: 0 6px 6px 0;
    color: var(--muted);
    font-size: 0.95rem;
  }

  .content :global(blockquote p) {
    margin: 0.3rem 0;
  }

  .content :global(blockquote blockquote) {
    margin: 0.5rem 0;
    border-left-color: var(--accent);
  }

  /* ---- Images ---- */
  .content :global(img) {
    display: block;
    max-width: 80%;
    max-height: 520px;
    width: auto;
    height: auto;
    object-fit: contain;
    border-radius: 8px;
    margin: 1rem auto;
  }

  /* ---- Tables ---- */
  .content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.2rem 0;
    font-size: 0.9rem;
    overflow-x: auto;
    display: block;
  }

  .content :global(th),
  .content :global(td) {
    padding: 0.6rem 0.8rem;
    border: 1px solid var(--stroke);
    text-align: left;
    vertical-align: top;
  }

  .content :global(th) {
    background: var(--surface-tag);
    color: var(--text);
    font-weight: 600;
    font-size: 0.85rem;
    white-space: nowrap;
  }

  .content :global(tr:nth-child(even)) {
    background: var(--surface);
  }

  /* ---- Lists ---- */
  .content :global(ul),
  .content :global(ol) {
    padding-left: 1.5rem;
    margin: 0.8rem 0;
  }

  .content :global(li) {
    margin: 0.3rem 0;
  }

  .content :global(li > ul),
  .content :global(li > ol) {
    margin: 0.2rem 0;
  }

  /* ---- Horizontal Rule ---- */
  .content :global(hr) {
    border: none;
    border-top: 1px solid var(--stroke);
    margin: 2rem 0;
  }

  /* ---- Strong / Emphasis ---- */
  .content :global(strong) {
    color: var(--text);
    font-weight: 600;
  }

  /* ---- Responsive ---- */
  @media (max-width: 768px) {
    h1 {
      font-size: 1.75rem;
    }

    .content :global(pre) {
      font-size: 0.82rem;
      padding: 0.75rem;
      margin-left: -0.5rem;
      margin-right: -0.5rem;
      border-radius: 6px;
    }

    .content :global(table) {
      font-size: 0.82rem;
    }

    .content :global(th),
    .content :global(td) {
      padding: 0.5rem 0.6rem;
    }
  }

  @media (max-width: 480px) {
    .article {
      padding: 1.25rem 0;
    }

    .back-link {
      margin-bottom: 1rem;
    }

    h1 {
      font-size: 1.4rem;
    }

    .body.lead {
      font-size: 0.95rem;
      margin-bottom: 1.2rem;
      padding-bottom: 1rem;
    }

    .content :global(pre) {
      font-size: 0.78rem;
      padding: 0.65rem;
    }

    .content :global(blockquote) {
      margin-left: 0;
      margin-right: 0;
      padding: 0.5rem 0.75rem;
    }
  }
</style>
