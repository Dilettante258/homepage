<script>
  import { initListControls } from "../../../scripts/list-controls";

  function setupListControls() {
    const container = document.querySelector(".projects-container");
    if (!container) return;

    // 使用 requestAnimationFrame 确保 DOM 渲染完成后初始化
    requestAnimationFrame(() => {
      initListControls({
        containerSelector: ".projects-container",
        cardSelector: ".project-card",
      });
    });
  }

  // 使用 astro:page-load 统一处理初始化和导航后更新
  document.addEventListener("astro:page-load", setupListControls);
</script>

<style>
  .page-header {
    padding: 2rem 0 0.5rem;
  }

  .subtitle {
    color: var(--muted);
    font-size: 0.9rem;
    margin: 0 0 0.3rem;
  }

  h1 {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 400;
    margin: 0;
    letter-spacing: -0.01em;
  }

  /* ---- Projects Container ---- */
  .projects-container {
    margin-top: calc(1.2rem - 2px);
    padding-top: 2px;
    width: 100%;
    overflow: hidden;
  }

  [data-layout="grid"] {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
    width: 100%;
  }

  [data-layout="list"] {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  [data-layout="list"] .project-card {
    display: grid;
    grid-template-columns: 48px 1fr auto;
    align-items: center;
    gap: 1rem;
  }

  .project-card[hidden] {
    display: none;
  }

  /* ---- Card Styles ---- */
  .project-card {
    display: grid;
    grid-template-columns: 48px 1fr auto;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    color: var(--text);
    border: 1px solid var(--stroke);
    border-radius: 10px;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
