---
import SiteLayout from "../../../layouts/SiteLayout.astro";
import ListToolbar from "../../../components/ListToolbar.astro";
import {
  resolveLocale,
  messages,
  SUPPORTED_LOCALES,
} from "../../../i18n/strings";
import { galleryItems, getAllTags } from "../../../data/gallery";

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];
const allTags = getAllTags();
---

<SiteLayout
  locale={locale}
  t={t}
  title={`${t.gallery.title} · Yiming`}
  description={t.gallery.subtitle}
>
  <section transition:animate="fade">
    <div class="page-header">
      <p class="subtitle">{t.gallery.subtitle}</p>
      <h1>{t.gallery.title}</h1>
    </div>

    <div transition:animate="fade">
    <ListToolbar
      tags={allTags}
      tagLabels={t.gallery.tagLabels}
      filterAllLabel={t.gallery.filterAll}
      sortByLabel={t.gallery.sortBy}
      sortOptions={[
        { value: "default", label: t.gallery.sortDefault },
        { value: "name-az", label: t.gallery.sortNameAZ },
        { value: "name-za", label: t.gallery.sortNameZA },
        { value: "newest", label: t.gallery.sortNewest },
        { value: "oldest", label: t.gallery.sortOldest },
      ]}
      layouts={["grid", "list", "tiling"]}
      layoutLabels={{
        grid: t.gallery.layoutGrid,
        list: t.gallery.layoutList,
        tiling: t.gallery.layoutTiling,
      }}
    />

    <div class="gallery-container" data-layout="grid">
      {
        galleryItems.map((item, idx) => (
          <a
            class="gallery-card"
            href={`/${locale}/gallery/${item.slug}`}
            data-tags={item.tags.join(",")}
            data-title={item.title[locale]}
            data-date={item.createdAt}
            data-order={String(idx)}
            transition:name={`gallery-${item.slug}`}
          >
            <div class={`card-thumbnail card-thumbnail--${item.aspect}`}>
              {item.cover ? (
                <img src={item.cover} alt={item.title[locale]} loading="lazy" />
              ) : (
                <div
                  class="card-gradient"
                  style={`background: ${item.fallbackGradient};`}
                />
              )}
            </div>
            <div class="card-body">
              <h3>{item.title[locale]}</h3>
              <p class="card-desc">{item.description[locale]}</p>
              <div class="tags">
                {item.tags.map((tag) => (
                  <span>{t.gallery.tagLabels[tag] ?? tag}</span>
                ))}
              </div>
            </div>
          </a>
        ))
      }
    </div>
    </div>
  </section>
</SiteLayout>

<script>
  import { initListControls } from "../../../scripts/list-controls";

  function setupListControls() {
    const container = document.querySelector(".gallery-container");
    if (!container) return;

    // 使用 requestAnimationFrame 确保 DOM 渲染完成后初始化
    requestAnimationFrame(() => {
      initListControls({
        containerSelector: ".gallery-container",
        cardSelector: ".gallery-card",
      });
    });
  }

  // 使用 astro:page-load 统一处理初始化和导航后更新
  document.addEventListener("astro:page-load", setupListControls);
</script>

<style>
  .page-header {
    padding: 2rem 0 0.5rem;
  }

  .subtitle {
    color: var(--muted);
    font-size: 0.9rem;
    margin: 0 0 0.3rem;
  }

  h1 {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 400;
    margin: 0;
    letter-spacing: -0.01em;
  }

  /* ---- Gallery Container ---- */
  .gallery-container {
    margin-top: 1.2rem;
  }

  [data-layout="grid"] {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 0.75rem;
  }

  [data-layout="list"] {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  [data-layout="list"] .gallery-card {
    display: grid;
    grid-template-columns: 200px 1fr;
    align-items: center;
    gap: 1rem;
  }

  [data-layout="list"] .card-thumbnail {
    height: 120px;
    aspect-ratio: auto;
  }

  [data-layout="tiling"] {
    columns: 3;
    column-gap: 1rem;
  }

  [data-layout="tiling"] .gallery-card {
    break-inside: avoid;
    margin-bottom: 1rem;
    border: 1px solid var(--stroke);
    border-radius: 10px;
  }

  .gallery-card[hidden] {
    display: none;
  }

  /* ---- Card Styles ---- */
  .gallery-card {
    display: block;
    overflow: hidden;
    text-decoration: none;
    color: var(--text);
    border: 1px solid var(--stroke);
    border-radius: 12px;
    transition: border-color 0.15s;
  }

  .gallery-card:hover {
    border-color: var(--border-hover);
  }

  .card-thumbnail {
    width: 100%;
    overflow: hidden;
  }

  .card-thumbnail--landscape {
    aspect-ratio: 16 / 10;
  }
  .card-thumbnail--portrait {
    aspect-ratio: 9 / 14;
  }
  .card-thumbnail--square {
    aspect-ratio: 1;
  }

  .card-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .card-gradient {
    width: 100%;
    height: 100%;
    min-height: 120px;
  }

  .card-body {
    padding: 0.9rem 1rem;
  }

  .card-body h3 {
    font-family: var(--font-heading);
    margin: 0 0 0.25rem;
    font-size: 1rem;
    font-weight: 400;
  }

  .card-desc {
    color: var(--muted);
    font-size: 0.85rem;
    line-height: 1.5;
    margin: 0 0 0.5rem;
  }

  .tags {
    display: flex;
    gap: 0.3rem;
    flex-wrap: wrap;
  }

  .tags span {
    padding: 0.15rem 0.45rem;
    border-radius: 4px;
    background: var(--surface-tag);
    color: var(--muted);
    font-size: 0.75rem;
  }

  @media (prefers-reduced-motion: reduce) {
    ::view-transition-group(*),
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation-duration: 0.01ms !important;
    }
  }

  @media (max-width: 900px) {
    [data-layout="tiling"] {
      columns: 2;
    }
  }

  @media (max-width: 600px) {
    [data-layout="tiling"] {
      columns: 1;
    }
    [data-layout="list"] .gallery-card {
      grid-template-columns: 1fr;
    }
  }
</style>
