---
import { getCollection } from "astro:content";
import SiteLayout from "../../../layouts/SiteLayout.astro";
import ListToolbar from "../../../components/ListToolbar.astro";
import {
  resolveLocale,
  messages,
  SUPPORTED_LOCALES,
} from "../../../i18n/strings";

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];

const posts = (
  await getCollection("blog", ({ data }) => data.locale === locale)
).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const allTags = [...new Set(posts.flatMap((p) => p.data.tags ?? []))];
---

<SiteLayout
  locale={locale}
  t={t}
  title={`${t.nav.blog} · Dilettante258`}
  description={t.blog.subtitle}
>
  <section transition:animate="fade">
    <div class="page-header">
      <p class="subtitle">{t.blog.subtitle}</p>
      <h1>{t.blog.title}</h1>
    </div>

    {
      posts.length > 0 && (
        <ListToolbar
          tags={allTags}
          filterAllLabel={t.blog.filterAll}
          sortByLabel={t.blog.sortBy}
          sortOptions={[
            { value: "default", label: t.blog.sortDefault },
            { value: "oldest", label: t.blog.sortOldest },
            { value: "name-az", label: t.blog.sortNameAZ },
            { value: "name-za", label: t.blog.sortNameZA },
          ]}
          layouts={["grid", "list"]}
          layoutLabels={{
            grid: t.blog.layoutGrid,
            list: t.blog.layoutList,
          }}
        />
      )
    }

    <div class="posts" data-layout="grid">
      {
        posts.map((post, idx) => (
          <a
            class="post"
            href={`/${locale}/blog/${post.slug}`}
            data-tags={(post.data.tags ?? []).join(",")}
            data-title={post.data.title}
            data-date={post.data.date.toISOString()}
            data-order={String(idx)}
          >
            <p class="eyebrow">
              {new Intl.DateTimeFormat(locale, { dateStyle: "medium" }).format(
                post.data.date,
              )}
            </p>
            <h3>{post.data.title}</h3>
            <p class="body">{post.data.description}</p>
            <div class="tags">
              {post.data.tags?.map((tag) => (
                <span>{tag}</span>
              ))}
            </div>
          </a>
        ))
      }
      {posts.length === 0 && <p class="muted">No posts yet.</p>}
    </div>
  </section>
</SiteLayout>

<script>
  import { initListControls } from "../../../scripts/list-controls";

  function setupListControls() {
    const container = document.querySelector(".posts");
    if (!container) return;

    // 使用 requestAnimationFrame 确保 DOM 渲染完成后初始化
    requestAnimationFrame(() => {
      initListControls({
        containerSelector: ".posts",
        cardSelector: ".post",
      });
    });
  }

  // 使用 astro:page-load 统一处理初始化和导航后更新
  document.addEventListener("astro:page-load", setupListControls);
</script>

<style>
  .page-header {
    padding: 2rem 0 0.5rem;
  }

  .subtitle {
    color: var(--muted);
    font-size: 0.9rem;
    margin: 0 0 0.3rem;
  }

  h1 {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 400;
    margin: 0;
    letter-spacing: -0.01em;
  }

  .body {
    color: var(--muted);
    line-height: 1.6;
    font-size: 0.9rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin: 0.2rem 0 0;
  }

  .eyebrow {
    font-size: 0.78rem;
    color: var(--muted);
    margin: 0;
    font-variant-numeric: tabular-nums;
    letter-spacing: 0.02em;
  }

  /* ---- Posts Container ---- */
  .posts {
    margin-top: 1.2rem;
    width: 100%;
    overflow: hidden;
  }

  [data-layout="grid"] {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 0.75rem;
    width: 100%;
  }

  [data-layout="list"] {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .post[hidden] {
    display: none;
  }

  .post {
    display: flex;
    flex-direction: column;
    padding: 1.25rem;
    text-decoration: none;
    color: var(--text);
    border: 1px solid var(--stroke);
    border-radius: 12px;
    transition:
      border-color 0.2s,
      background-color 0.2s,
      transform 0.2s;
  }

  .post:hover {
    border-color: var(--border-hover);
    background: var(--surface);
    transform: translateY(-1px);
  }

  .post h3 {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.15rem;
    margin: 0.35rem 0 0.15rem;
    line-height: 1.35;
  }

  .tags {
    display: flex;
    gap: 0.35rem;
    flex-wrap: wrap;
    margin-top: auto;
    padding-top: 0.6rem;
  }

  .tags span {
    padding: 0.18rem 0.5rem;
    border-radius: 4px;
    background: var(--surface-tag);
    color: var(--muted);
    font-size: 0.73rem;
    letter-spacing: 0.01em;
  }

  .muted {
    color: var(--muted);
  }

  @media (max-width: 480px) {
    .page-header {
      padding: 1.25rem 0 0.25rem;
    }

    h1 {
      font-size: 1.5rem;
    }

    [data-layout="grid"] {
      grid-template-columns: 1fr;
    }

    .post {
      padding: 1rem;
      border-radius: 10px;
    }

    .post h3 {
      font-size: 1rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    ::view-transition-group(*),
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation-duration: 0.01ms !important;
    }
  }
</style>
