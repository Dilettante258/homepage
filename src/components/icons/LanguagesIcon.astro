---
interface Props {
  size?: number;
  class?: string;
}

const { size = 28, class: className } = Astro.props;
---

<div class:list={["languages-icon", className]}>
  <svg
    fill="none"
    height={size}
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    viewBox="0 0 24 24"
    width={size}
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="m5 8 6 6" style="--delay: 0.3s"></path>
    <path d="m4 14 6-6 3-3" style="--delay: 0.2s"></path>
    <path d="M2 5h12" style="--delay: 0.1s"></path>
    <path d="M7 2h1" style="--delay: 0s"></path>
    <path d="m22 22-5-10-5 10" style="--delay: 0.3s"></path>
    <path d="M14 18h6" style="--delay: 0.3s"></path>
  </svg>
</div>

<style>
  .languages-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  svg path {
    opacity: 1;
    stroke-dasharray: 1;
    stroke-dashoffset: 0;
  }

  .languages-icon:hover svg path {
    animation: drawPath 0.5s ease-out forwards;
    animation-delay: var(--delay);
  }

  @keyframes drawPath {
    0% {
      opacity: 0;
      stroke-dasharray: 1;
      stroke-dashoffset: 1;
    }
    1% {
      opacity: 1;
    }
    100% {
      opacity: 1;
      stroke-dasharray: 1;
      stroke-dashoffset: 0;
    }
  }
</style>
