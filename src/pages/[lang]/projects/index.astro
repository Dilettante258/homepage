  <section class="page-header" transition:animate="fade">
    <p class="subtitle">{t.projects.subtitle}</p>
    <h1>{t.projects.title}</h1>
  </section>

  <div transition:animate="fade">
    <ListToolbar
      tags={allTags}
      tagLabels={t.projects.tagLabels}
      filterAllLabel={t.projects.filterAll}
      sortByLabel={t.projects.sortBy}
      sortOptions={[
        { value: "default", label: t.projects.sortDefault },
        { value: "name-az", label: t.projects.sortNameAZ },
        { value: "name-za", label: t.projects.sortNameZA },
        { value: "newest", label: t.projects.sortNewest },
        { value: "oldest", label: t.projects.sortOldest },
      ]}
      layouts={["grid", "list"]}
      layoutLabels={{
        grid: t.projects.layoutGrid,
        list: t.projects.layoutList,
      }}
    />

    <div class="projects-container" data-layout="grid">
      {
        projectItems.map((item, idx) => (
          <article
            class="project-card"
