---
import SiteLayout from "../../../layouts/SiteLayout.astro";
import ListToolbar from "../../../components/ListToolbar.astro";
import TechIcon from "../../../components/TechIcon.astro";
import {
  resolveLocale,
  messages,
  SUPPORTED_LOCALES,
} from "../../../i18n/strings";
import { projectItems, getAllProjectTags } from "../../../data/projects";

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];
const allTags = getAllProjectTags();
---

<SiteLayout
  locale={locale}
  t={t}
  title={`${t.projects.title} · Dilettante258`}
  description={t.projects.subtitle}
>
  <section class="page-header" transition:animate="fade">
    <p class="subtitle">{t.projects.subtitle}</p>
    <h1>{t.projects.title}</h1>
  </section>

  <div transition:animate="fade">
    <ListToolbar
      tags={allTags}
      tagLabels={t.projects.tagLabels}
      filterAllLabel={t.projects.filterAll}
      sortByLabel={t.projects.sortBy}
      sortOptions={[
        { value: "default", label: t.projects.sortDefault },
        { value: "name-az", label: t.projects.sortNameAZ },
        { value: "name-za", label: t.projects.sortNameZA },
        { value: "newest", label: t.projects.sortNewest },
        { value: "oldest", label: t.projects.sortOldest },
      ]}
      layouts={["grid", "list"]}
      layoutLabels={{
        grid: t.projects.layoutGrid,
        list: t.projects.layoutList,
      }}
    />

    <div class="projects-container" data-layout="grid">
      {
        projectItems.map((item, idx) => (
          <article
            class="project-card"
            data-tags={item.tags.join(",")}
            data-title={item.title[locale]}
            data-date={item.createdAt}
            data-order={String(idx)}
            transition:name={`project-${item.slug}`}
          >
            <div class="card-thumbnail">
              {item.cover ? (
                <img src={item.cover} alt={item.title[locale]} loading="lazy" />
              ) : (
                <div
                  class="card-gradient"
                  style={`background: ${item.fallbackGradient};`}
                />
              )}
            </div>
            <div class="card-body">
              <div class="card-header">
                <h3>{item.title[locale]}</h3>
                <div class="tech-icons">
                  {item.tech.slice(0, 3).map((techName) => (
                    <TechIcon techName={techName} />
                  ))}
                </div>
              </div>
              <p class="card-desc">{item.description[locale]}</p>
              <div class="tech-chips">
                {item.tech.map((techName) => (
                  <span class="tech-chip">{techName}</span>
                ))}
              </div>
            </div>
            <div class="card-links">
              <a
                href={item.links.live || item.links.github || '#'}
                target="_blank"
                rel="noreferrer"
                class="card-link"
                aria-label={t.projects.viewProject}
              >
                <svg
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M7 17L17 7M17 7H7M17 7V17" />
                </svg>
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</SiteLayout>

<script>
  import { initListControls } from "../../../scripts/list-controls";

  function setupListControls() {
    const container = document.querySelector(".projects-container");
    if (!container) return;

    // 使用 requestAnimationFrame 确保 DOM 渲染完成后初始化
    requestAnimationFrame(() => {
      initListControls({
        containerSelector: ".projects-container",
        cardSelector: ".project-card",
      });
    });
  }

  // 使用 astro:page-load 统一处理初始化和导航后更新
  document.addEventListener("astro:page-load", setupListControls);
</script>

<style>
  .page-header {
    padding: 2rem 0 0.5rem;
  }

  .subtitle {
    color: var(--muted);
    font-size: 0.9rem;
    margin: 0 0 0.3rem;
  }

  h1 {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 400;
    margin: 0;
    letter-spacing: -0.01em;
  }

  /* ---- Projects Container ---- */
  .projects-container {
    margin-top: calc(1.2rem - 2px);
    padding-top: 2px;
    width: 100%;
    overflow: hidden;
  }

  [data-layout="grid"] {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
    width: 100%;
  }

  [data-layout="list"] {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  [data-layout="list"] .project-card {
    display: grid;
    grid-template-columns: 48px 1fr auto;
    align-items: center;
    gap: 1rem;
  }

  .project-card[hidden] {
    display: none;
  }

  /* ---- Card Styles ---- */
  .project-card {
    display: grid;
    grid-template-columns: 48px 1fr auto;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    color: var(--text);
    border: 1px solid var(--stroke);
    border-radius: 10px;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    background: var(--surface);
  }

  .project-card:hover {
    border-color: var(--border-hover);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px var(--shadow);
  }

  .card-thumbnail {
    width: 48px;
    height: 48px;
    flex-shrink: 0;
    border-radius: 8px;
    overflow: hidden;
  }

  .card-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .card-gradient {
    width: 100%;
    height: 100%;
  }

  .card-body {
    flex: 1;
    min-width: 0;
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
    margin-bottom: 0.25rem;
  }

  .card-body h3 {
    font-family: var(--font-heading);
    margin: 0;
    font-size: 1rem;
    font-weight: 400;
    letter-spacing: -0.01em;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .tech-icons {
    display: flex;
    gap: 0.35rem;
    flex-shrink: 0;
  }

  .tech-icon {
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.65rem;
    font-weight: 600;
    color: var(--muted);
    background: var(--surface-tag);
    border-radius: 4px;
    font-family: var(--font-mono);
    transition: color 0.2s;
  }

  .tech-icon svg {
    width: 100%;
    height: 100%;
  }

  .tech-icon:hover {
    color: var(--text);
  }

  .card-desc {
    color: var(--muted);
    font-size: 0.85rem;
    line-height: 1.5;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tech-chips {
    display: none;
  }

  .card-links {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    flex-shrink: 0;
    border-radius: 6px;
    background: var(--surface-hover);
    transition: all 0.2s;
  }

  .card-links:hover {
    background: var(--surface-tag);
  }

  .card-link {
    width: 16px;
    height: 16px;
    color: var(--text);
    transition: color 0.2s;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-link svg {
    width: 100%;
    height: 100%;
  }

  .card-link:hover {
    color: var(--primary);
  }

  .card-link.secondary {
    display: none;
  }

  @media (prefers-reduced-motion: reduce) {
    ::view-transition-group(*),
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation-duration: 0.01ms !important;
    }
  }

  @media (max-width: 900px) {
    [data-layout="grid"] {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 700px) {
    .project-card,
    [data-layout="list"] .project-card {
      grid-template-columns: 40px 1fr auto;
      gap: 0.75rem;
      padding: 0.875rem;
    }

    .card-thumbnail {
      width: 40px;
      height: 40px;
    }

    .card-body h3 {
      font-size: 0.95rem;
    }

    .card-desc {
      font-size: 0.8rem;
      -webkit-line-clamp: 1;
    }

    .tech-icon {
      width: 16px;
      height: 16px;
    }

    .card-links {
      width: 28px;
      height: 28px;
    }

    .card-link {
      width: 14px;
      height: 14px;
    }
  }

  @media (max-width: 480px) {
    .page-header {
      padding: 1.25rem 0 0.25rem;
    }

    h1 {
      font-size: 1.5rem;
    }

    .project-card,
    [data-layout="list"] .project-card {
      grid-template-columns: 36px 1fr auto;
      gap: 0.6rem;
      padding: 0.75rem;
      border-radius: 8px;
    }

    .card-thumbnail {
      width: 36px;
      height: 36px;
      border-radius: 6px;
    }
  }
</style>
