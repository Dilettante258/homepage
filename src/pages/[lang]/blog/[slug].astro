---
import { getCollection } from "astro:content";
import SiteLayout from "../../../layouts/SiteLayout.astro";
import { resolveLocale, messages } from "../../../i18n/strings";
import TOC from "../../../components/TOC.astro";
import ArrowLeftIcon from "../../../components/icons/ArrowLeftIcon.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { lang: post.data.locale, slug: post.slug },
  }));
}

const { lang, slug } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];

const posts = await getCollection("blog", ({ data }) => data.locale === locale);
const post = posts.find((entry) => entry.slug === slug);

if (!post) {
  throw new Error(`Post not found for slug "${slug}" and locale "${locale}"`);
}

const { Content, headings } = await post.render();
---

<SiteLayout
  locale={locale}
  t={t}
  title={`${post.data.title} · Dilettante258`}
  description={post.data.description}
>
  <!-- <Debug content={headings} /> -->
  <article class="article">
    <a href={`/${locale}/blog`} class="back-link">
      <ArrowLeftIcon size={16} />
      {t.blog.backToBlog}
    </a>
    <p class="meta">
      {
        new Intl.DateTimeFormat(locale, { dateStyle: "medium" }).format(
          post.data.date,
        )
      } ·{" "}
      {post.data.tags?.join(" · ")}
    </p>
    <h1>{post.data.title}</h1>
    <p class="body lead">{post.data.description}</p>
    <div class="content">
      <Content />
    </div>
  </article>
  <TOC heading={headings} />
</SiteLayout>

<style>
  .article {
    padding: 2rem 0;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--muted);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    transition: color 0.15s;
  }

  .back-link:hover {
    color: var(--text);
  }

  .back-link svg {
    flex-shrink: 0;
  }

  .meta {
    font-size: 0.82rem;
    color: var(--muted);
    margin: 0;
    font-variant-numeric: tabular-nums;
  }

  h1 {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 2rem;
    letter-spacing: -0.01em;
    margin: 0.4rem 0 0;
  }

  .body.lead {
    margin: 0.6rem 0 1.5rem;
    font-size: 1.05rem;
  }

  .body,
  .content {
    color: var(--muted);
    line-height: 1.75;
  }

  .content h2,
  .content h3 {
    font-family: var(--font-heading);
    font-weight: 400;
    color: var(--text);
  }

  .content pre {
    padding: 1rem;
    border-radius: 8px;
    background: linear-gradient(
      140deg,
      rgba(0, 0, 0, 0.2),
      rgba(0, 0, 0, 0)
    );
    border: 1px solid var(--stroke);
    box-shadow:
      0 16px 30px rgba(0, 0, 0, 0.18),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
    overflow-x: auto;
    font-size: 0.88rem;
    line-height: 1.7;
  }

  .content pre code {
    display: block;
    color: var(--text);
  }

  .content code {
    font-family:
      "JetBrains Mono", "SFMono-Regular", ui-monospace, SFMono-Regular, Menlo,
      Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
  }

  .content :not(pre) > code {
    background: var(--surface-tag);
    border: 1px solid var(--stroke);
    border-radius: 6px;
    padding: 0.15rem 0.35rem;
    font-size: 0.92em;
    color: var(--text);
  }

  .content a {
    color: var(--primary);
  }

  :root[data-theme="light"] .content pre {
    background: linear-gradient(
        160deg,
        rgba(255, 255, 255, 0.85),
        rgba(255, 255, 255, 0.4)
      ),
      var(--surface);
    box-shadow:
      0 16px 24px rgba(0, 0, 0, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.7);
  }

  /* ---- Responsive ---- */
  @media (max-width: 768px) {
    h1 {
      font-size: 1.75rem;
    }

    .content pre {
      font-size: 0.82rem;
      padding: 0.75rem;
      margin-left: -0.5rem;
      margin-right: -0.5rem;
      border-radius: 6px;
    }
  }

  @media (max-width: 480px) {
    .article {
      padding: 1.25rem 0;
    }

    .back-link {
      margin-bottom: 1rem;
    }

    h1 {
      font-size: 1.4rem;
    }

    .body.lead {
      font-size: 0.95rem;
      margin-bottom: 1.2rem;
    }

    .content pre {
      font-size: 0.78rem;
      padding: 0.65rem;
    }
  }
</style>
