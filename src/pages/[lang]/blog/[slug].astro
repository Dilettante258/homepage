---
import { getCollection } from "astro:content";
import SiteLayout from "../../../layouts/SiteLayout.astro";
import { resolveLocale, messages } from "../../../i18n/strings";
import TOC from "../../../components/TOC.astro";
import { Debug } from "astro:components";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { lang: post.data.locale, slug: post.slug },
  }));
}

const { lang, slug } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];

const posts = await getCollection("blog", ({ data }) => data.locale === locale);
const post = posts.find((entry) => entry.slug === slug);

if (!post) {
  throw new Error(`Post not found for slug "${slug}" and locale "${locale}"`);
}

const { Content, headings } = await post.render();
---

<SiteLayout
  locale={locale}
  t={t}
  title={`${post.data.title} · Dilettante258`}
  description={post.data.description}
  data-alignment="center"
>
  <!-- <Debug content={headings} /> -->
  <article class="article">
    <p class="meta">
      {
        new Intl.DateTimeFormat(locale, { dateStyle: "medium" }).format(
          post.data.date,
        )
      } ·{" "}
      {post.data.tags?.join(" · ")}
    </p>
    <h1>{post.data.title}</h1>
    <p class="body lead">{post.data.description}</p>
    <div class="content">
      <Content />
    </div>
  </article>
  <TOC heading={headings} />
</SiteLayout>

<style>
  .article {
    padding: 2rem 0;
  }

  .meta {
    font-size: 0.82rem;
    color: var(--muted);
    margin: 0;
    font-variant-numeric: tabular-nums;
  }

  h1 {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 2rem;
    letter-spacing: -0.01em;
    margin: 0.4rem 0 0;
  }

  .body.lead {
    margin: 0.6rem 0 1.5rem;
    font-size: 1.05rem;
  }

  .body,
  .content {
    color: var(--muted);
    line-height: 1.75;
  }

  .content h2,
  .content h3 {
    font-family: var(--font-heading);
    font-weight: 400;
    color: var(--text);
  }

  .content pre {
    padding: 1rem;
    border-radius: 8px;
    background: var(--surface-tag);
    overflow-x: auto;
    font-size: 0.88rem;
  }

  .content code {
    font-family:
      "JetBrains Mono", "SFMono-Regular", ui-monospace, SFMono-Regular, Menlo,
      Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
  }

  .content a {
    color: var(--primary);
  }
</style>
