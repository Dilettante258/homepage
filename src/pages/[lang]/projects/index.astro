---
import SiteLayout from "../../../layouts/SiteLayout.astro";
import ListToolbar from "../../../components/ListToolbar.astro";
import {
  resolveLocale,
  messages,
  SUPPORTED_LOCALES,
} from "../../../i18n/strings";
import { projectItems, getAllProjectTags } from "../../../data/projects";

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];
const allTags = getAllProjectTags();
---

<SiteLayout
  locale={locale}
  t={t}
  title={`${t.projects.title} Â· Yiming`}
  description={t.projects.subtitle}
>
  <section class="page-header">
    <p class="subtitle">{t.projects.subtitle}</p>
    <h1>{t.projects.title}</h1>
  </section>

  <ListToolbar
    tags={allTags}
    tagLabels={t.projects.tagLabels}
    filterAllLabel={t.projects.filterAll}
    sortByLabel={t.projects.sortBy}
    sortOptions={[
      { value: "default", label: t.projects.sortDefault },
      { value: "name-az", label: t.projects.sortNameAZ },
      { value: "name-za", label: t.projects.sortNameZA },
      { value: "newest", label: t.projects.sortNewest },
      { value: "oldest", label: t.projects.sortOldest },
    ]}
    layouts={["grid", "list"]}
    layoutLabels={{
      grid: t.projects.layoutGrid,
      list: t.projects.layoutList,
    }}
  />

  <div class="projects-container" data-layout="grid">
    {
      projectItems.map((item, idx) => (
        <div
          class="project-card"
          data-tags={item.tags.join(",")}
          data-title={item.title[locale]}
          data-date={item.createdAt}
          data-order={String(idx)}
          style={`view-transition-name: project-${item.slug};`}
        >
          <div class="card-thumbnail">
            {item.cover ? (
              <img src={item.cover} alt={item.title[locale]} loading="lazy" />
            ) : (
              <div
                class="card-gradient"
                style={`background: ${item.fallbackGradient};`}
              />
            )}
          </div>
          <div class="card-body">
            <h3>{item.title[locale]}</h3>
            <p class="card-desc">{item.description[locale]}</p>
            <div class="tech-chips">
              {item.tech.map((techName) => (
                <span class="tech-chip">{techName}</span>
              ))}
            </div>
            <div class="card-links">
              {item.links.live && (
                <a
                  href={item.links.live}
                  target="_blank"
                  rel="noreferrer"
                  class="card-link"
                >
                  {t.projects.viewProject} &rarr;
                </a>
              )}
              {item.links.github && (
                <a
                  href={item.links.github}
                  target="_blank"
                  rel="noreferrer"
                  class="card-link secondary"
                >
                  {t.projects.viewCode}
                </a>
              )}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</SiteLayout>

<script>
  import { initListControls } from "../../../scripts/list-controls";
  initListControls({
    containerSelector: ".projects-container",
    cardSelector: ".project-card",
  });
</script>

<style>
  .page-header {
    padding: 2rem 0 0.5rem;
  }

  .subtitle {
    color: var(--muted);
    font-size: 0.9rem;
    margin: 0 0 0.3rem;
  }

  h1 {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 400;
    margin: 0;
    letter-spacing: -0.01em;
  }

  /* ---- Projects Container ---- */
  .projects-container {
    margin-top: 1.2rem;
  }

  [data-layout="grid"] {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 0.75rem;
  }

  [data-layout="list"] {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  [data-layout="list"] .project-card {
    display: grid;
    grid-template-columns: 200px 1fr;
    align-items: center;
    gap: 1.2rem;
  }

  [data-layout="list"] .card-thumbnail {
    height: 120px;
    aspect-ratio: auto;
  }

  .project-card[hidden] {
    display: none;
  }

  /* ---- Card Styles ---- */
  .project-card {
    overflow: hidden;
    color: var(--text);
    border: 1px solid var(--stroke);
    border-radius: 12px;
    transition: border-color 0.15s;
  }

  .project-card:hover {
    border-color: var(--border-hover);
  }

  .card-thumbnail {
    width: 100%;
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .card-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .card-gradient {
    width: 100%;
    height: 100%;
    min-height: 120px;
  }

  .card-body {
    padding: 1rem 1.2rem 1.2rem;
  }

  .card-body h3 {
    font-family: var(--font-heading);
    margin: 0 0 0.3rem;
    font-size: 1.05rem;
    font-weight: 400;
  }

  .card-desc {
    color: var(--muted);
    font-size: 0.85rem;
    line-height: 1.5;
    margin: 0 0 0.6rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tech-chips {
    display: flex;
    gap: 0.3rem;
    flex-wrap: wrap;
    margin-bottom: 0.75rem;
  }

  .tech-chip {
    padding: 0.15rem 0.45rem;
    border-radius: 4px;
    color: var(--muted);
    font-size: 0.72rem;
    background: var(--surface-tag);
  }

  .card-links {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .card-link {
    font-size: 0.82rem;
    font-weight: 500;
    text-decoration: none;
    color: var(--text);
    transition: color 0.15s;
  }

  .card-link.secondary {
    color: var(--muted);
    font-weight: 400;
  }

  .card-link:hover {
    color: var(--primary);
  }

  @media (prefers-reduced-motion: reduce) {
    ::view-transition-group(*),
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation-duration: 0.01ms !important;
    }
  }

  @media (max-width: 600px) {
    [data-layout="list"] .project-card {
      grid-template-columns: 1fr;
    }
  }
</style>
