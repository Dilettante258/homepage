---
import SiteLayout from "../../layouts/SiteLayout.astro";
import { resolveLocale, messages, SUPPORTED_LOCALES } from "../../i18n/strings";

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];
---

<SiteLayout locale={locale} t={t}>
  <section class="hero">
    <p class="eyebrow">Full-stack · Edge-ready · DX lover</p>
    <h1>{t.hero.title}</h1>
    <p class="lede">{t.hero.subtitle}</p>
    <div class="cta">
      <a class="btn" href={`/${locale}/gallery`}>{t.hero.ctaPrimary}</a>
      <a class="ghost" href={`/${locale}/about`}>{t.hero.ctaSecondary}</a>
    </div>
    <div class="chips">
      <span>TypeScript</span>
      <span>React</span>
      <span>Solid.js</span>
      <span>Astro</span>
      <span>Node.js</span>
    </div>
    <div class="socials">
      <a href="https://github.com/yiminghe" target="_blank" rel="noreferrer" aria-label="GitHub" class="social-link">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
        </svg>
      </a>
      <a href="mailto:hi@yiming.work" aria-label="Email" class="social-link">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="2" y="4" width="20" height="16" rx="2"/>
          <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
        </svg>
      </a>
    </div>
  </section>
</SiteLayout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 4rem 0 3rem;
    max-width: 640px;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 12px;
    color: var(--muted);
    margin: 0;
  }

  h1 {
    font-size: clamp(2.4rem, 4vw, 3.2rem);
    margin: 0.4rem 0 0.6rem;
    line-height: 1.15;
  }

  .lede {
    color: var(--muted);
    font-size: 1.1rem;
    line-height: 1.7;
    max-width: 50ch;
    margin: 0;
  }

  .cta {
    display: flex;
    gap: 0.8rem;
    margin-top: 1.8rem;
  }

  .btn,
  .ghost {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.8rem 1.4rem;
    border-radius: 999px;
    font-weight: 600;
    text-decoration: none;
    border: 1px solid var(--stroke);
    color: var(--text);
    transition:
      transform 0.18s ease,
      border-color 0.18s,
      background 0.18s,
      box-shadow 0.18s;
  }

  .btn {
    background: linear-gradient(120deg, var(--primary-bg), var(--accent-bg));
    border-color: var(--primary-border);
    box-shadow: 0 10px 40px var(--primary-glow);
  }

  .btn:hover,
  .ghost:hover {
    transform: translateY(-1px);
    border-color: var(--border-hover);
  }

  .ghost {
    background: var(--surface-hover);
  }

  .chips {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1.4rem;
  }

  .chips span {
    padding: 0.45rem 0.8rem;
    border-radius: 999px;
    border: 1px solid var(--stroke);
    color: var(--muted);
    font-size: 0.9rem;
    background: var(--surface);
  }

  .socials {
    display: flex;
    gap: 0.6rem;
    margin-top: 1.8rem;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 12px;
    border: 1px solid var(--stroke);
    color: var(--muted);
    background: var(--surface);
    text-decoration: none;
    transition:
      color 0.2s,
      border-color 0.2s,
      transform 0.2s,
      box-shadow 0.2s;
  }

  .social-link:hover {
    color: var(--text);
    border-color: var(--primary-border);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px var(--primary-glow);
  }

  @media (max-width: 600px) {
    .hero {
      padding: 2rem 0;
    }
  }
</style>
