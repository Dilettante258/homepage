---
import SiteLayout from "../../../layouts/SiteLayout.astro";
import ListToolbar from "../../../components/ListToolbar.astro";
import {
  resolveLocale,
  messages,
  SUPPORTED_LOCALES,
} from "../../../i18n/strings";
import { projectItems, getAllProjectTags } from "../../../data/projects";

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];
const allTags = getAllProjectTags();
---

<SiteLayout
  locale={locale}
  t={t}
  title={`${t.projects.title} Â· Yiming`}
  description={t.projects.subtitle}
>
  <section class="panel">
    <div class="panel__header">
      <div>
        <p class="eyebrow">{t.projects.subtitle}</p>
        <h1>{t.projects.title}</h1>
      </div>
    </div>

    <ListToolbar
      tags={allTags}
      tagLabels={t.projects.tagLabels}
      filterAllLabel={t.projects.filterAll}
      sortByLabel={t.projects.sortBy}
      sortOptions={[
        { value: "default", label: t.projects.sortDefault },
        { value: "name-az", label: t.projects.sortNameAZ },
        { value: "name-za", label: t.projects.sortNameZA },
        { value: "newest", label: t.projects.sortNewest },
        { value: "oldest", label: t.projects.sortOldest },
      ]}
      layouts={["grid", "list"]}
      layoutLabels={{
        grid: t.projects.layoutGrid,
        list: t.projects.layoutList,
      }}
    />

    <div class="projects-container" data-layout="grid">
      {
        projectItems.map((item, idx) => (
          <div
            class="project-card"
            data-tags={item.tags.join(",")}
            data-title={item.title[locale]}
            data-date={item.createdAt}
            data-order={String(idx)}
            style={`view-transition-name: project-${item.slug}; --i: ${idx};`}
          >
            <div class="card-thumbnail">
              {item.cover ? (
                <img src={item.cover} alt={item.title[locale]} loading="lazy" />
              ) : (
                <div
                  class="card-gradient"
                  style={`background: ${item.fallbackGradient};`}
                />
              )}
              <div class="thumbnail-shimmer" aria-hidden="true"></div>
              <span class="card-index">{String(idx + 1).padStart(2, '0')}</span>
            </div>
            <div class="card-body">
              <h3>{item.title[locale]}</h3>
              <p class="card-desc">{item.description[locale]}</p>
              <div class="tech-chips">
                {item.tech.map((techName) => (
                  <span class="tech-chip">{techName}</span>
                ))}
              </div>
              <div class="card-links">
                {item.links.live && (
                  <a
                    href={item.links.live}
                    target="_blank"
                    rel="noreferrer"
                    class="card-link card-link--primary"
                  >
                    {t.projects.viewProject}
                    <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17L17 7"/><path d="M7 7h10v10"/></svg>
                  </a>
                )}
                {item.links.github && (
                  <a
                    href={item.links.github}
                    target="_blank"
                    rel="noreferrer"
                    class="card-link"
                  >
                    {t.projects.viewCode}
                    <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17L17 7"/><path d="M7 7h10v10"/></svg>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </section>
</SiteLayout>

<script>
  import { initListControls } from "../../../scripts/list-controls";
  initListControls({
    containerSelector: ".projects-container",
    cardSelector: ".project-card",
  });
</script>

<style>
  .panel {
    margin-top: 1rem;
    border: 1px solid var(--stroke);
    border-radius: 20px;
    padding: 1.8rem;
    background: var(--surface);
    box-shadow: 0 30px 120px var(--shadow);
  }

  .panel__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 12px;
    color: var(--muted);
    margin: 0;
  }

  h1 {
    margin: 0.4rem 0;
  }

  /* ---- Projects Container ---- */
  .projects-container {
    margin-top: 1rem;
  }

  [data-layout="grid"] {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  [data-layout="list"] {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  [data-layout="list"] .project-card {
    display: grid;
    grid-template-columns: 220px 1fr;
    align-items: center;
    gap: 1.2rem;
  }

  [data-layout="list"] .card-thumbnail {
    height: 140px;
    aspect-ratio: auto;
  }

  .project-card[hidden] {
    display: none;
  }

  /* ---- Card Styles ---- */
  .project-card {
    border: 1px solid var(--stroke);
    border-radius: 16px;
    overflow: hidden;
    color: var(--text);
    background: var(--surface-raised);
    animation: card-rise 0.5s cubic-bezier(0.16, 1, 0.3, 1) both;
    animation-delay: calc(var(--i) * 0.06s);
    transition:
      transform 0.25s cubic-bezier(0.16, 1, 0.3, 1),
      border-color 0.25s,
      box-shadow 0.35s;
  }

  @keyframes card-rise {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .project-card:hover {
    transform: translateY(-4px) scale(1.005);
    border-color: var(--primary-border);
    box-shadow:
      0 20px 60px var(--primary-glow),
      0 0 0 1px var(--primary-border);
  }

  .card-thumbnail {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .card-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .project-card:hover .card-thumbnail img {
    transform: scale(1.04);
  }

  .card-gradient {
    width: 100%;
    height: 100%;
    min-height: 140px;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .project-card:hover .card-gradient {
    transform: scale(1.04);
  }

  .thumbnail-shimmer {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      105deg,
      transparent 30%,
      rgba(255, 255, 255, 0.08) 45%,
      rgba(255, 255, 255, 0.15) 50%,
      rgba(255, 255, 255, 0.08) 55%,
      transparent 70%
    );
    transform: translateX(-100%);
    transition: none;
    pointer-events: none;
  }

  .project-card:hover .thumbnail-shimmer {
    transform: translateX(100%);
    transition: transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .card-index {
    position: absolute;
    bottom: 0.6rem;
    right: 0.6rem;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.04em;
    color: rgba(255, 255, 255, 0.7);
    background: rgba(0, 0, 0, 0.35);
    backdrop-filter: blur(6px);
    padding: 0.2rem 0.5rem;
    border-radius: 6px;
    font-variant-numeric: tabular-nums;
  }

  .card-body {
    padding: 1rem 1.2rem 1.2rem;
  }

  .card-body h3 {
    margin: 0 0 0.35rem;
    font-size: 1.1rem;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .card-desc {
    color: var(--muted);
    font-size: 0.88rem;
    line-height: 1.55;
    margin: 0 0 0.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tech-chips {
    display: flex;
    gap: 0.35rem;
    flex-wrap: wrap;
    margin-bottom: 0.9rem;
  }

  .tech-chip {
    padding: 0.25rem 0.55rem;
    border-radius: 6px;
    color: var(--muted);
    font-size: 0.75rem;
    font-weight: 500;
    background: var(--surface-tag);
    letter-spacing: 0.01em;
  }

  .card-links {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    padding: 0.4rem 0.8rem;
    border-radius: 999px;
    font-size: 0.82rem;
    font-weight: 500;
    text-decoration: none;
    border: 1px solid var(--stroke);
    color: var(--muted);
    background: var(--surface);
    transition:
      color 0.2s,
      border-color 0.2s,
      background 0.2s;
  }

  .card-link svg {
    flex-shrink: 0;
    opacity: 0.6;
    transition: transform 0.2s ease, opacity 0.2s;
  }

  .card-link:hover {
    color: var(--text);
    border-color: var(--primary-border);
    background: var(--surface-hover);
  }

  .card-link:hover svg {
    transform: translate(1px, -1px);
    opacity: 1;
  }

  .card-link--primary {
    background: linear-gradient(120deg, var(--primary-bg), var(--accent-bg));
    border-color: var(--primary-border);
    color: var(--text);
  }

  @media (prefers-reduced-motion: reduce) {
    .project-card {
      animation: none;
    }

    ::view-transition-group(*),
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation-duration: 0.01ms !important;
    }
  }

  @media (max-width: 600px) {
    [data-layout="list"] .project-card {
      grid-template-columns: 1fr;
    }
  }
</style>
