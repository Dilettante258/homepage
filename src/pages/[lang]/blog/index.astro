---
import { getCollection } from "astro:content";
import SiteLayout from "../../../layouts/SiteLayout.astro";
import ListToolbar from "../../../components/ListToolbar.astro";
import { resolveLocale, messages, SUPPORTED_LOCALES } from "../../../i18n/strings";

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const locale = resolveLocale(lang);
const t = messages[locale];

const posts = (
  await getCollection("blog", ({ data }) => data.locale === locale)
).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const allTags = [...new Set(posts.flatMap((p) => p.data.tags ?? []))];
---

<SiteLayout
  locale={locale}
  t={t}
  title={`${t.nav.blog} Â· Yiming`}
  description={t.blog.subtitle}
>
  <section class="panel">
    <div class="panel__header">
      <div>
        <p class="eyebrow">{t.blog.subtitle}</p>
        <h1>{t.blog.title}</h1>
      </div>
    </div>

    {posts.length > 0 && (
      <ListToolbar
        tags={allTags}
        filterAllLabel={t.blog.filterAll}
        sortByLabel={t.blog.sortBy}
        sortOptions={[
          { value: "default", label: t.blog.sortDefault },
          { value: "oldest", label: t.blog.sortOldest },
          { value: "name-az", label: t.blog.sortNameAZ },
          { value: "name-za", label: t.blog.sortNameZA },
        ]}
        layouts={["grid", "list"]}
        layoutLabels={{
          grid: t.blog.layoutGrid,
          list: t.blog.layoutList,
        }}
      />
    )}

    <div class="posts" data-layout="grid">
      {
        posts.map((post, idx) => (
          <a
            class="post"
            href={`/${locale}/blog/${post.slug}`}
            data-tags={(post.data.tags ?? []).join(",")}
            data-title={post.data.title}
            data-date={post.data.date.toISOString()}
            data-order={String(idx)}
          >
            <p class="eyebrow">
              {new Intl.DateTimeFormat(locale, { dateStyle: "medium" }).format(
                post.data.date,
              )}
            </p>
            <h3>{post.data.title}</h3>
            <p class="body">{post.data.description}</p>
            <div class="tags">
              {post.data.tags?.map((tag) => (
                <span>{tag}</span>
              ))}
            </div>
          </a>
        ))
      }
      {posts.length === 0 && <p class="muted">No posts yet.</p>}
    </div>
  </section>
</SiteLayout>

<script>
  import { initListControls } from "../../../scripts/list-controls";
  initListControls({
    containerSelector: ".posts",
    cardSelector: ".post",
  });
</script>

<style>
  .panel {
    margin-top: 1rem;
    border: 1px solid var(--stroke);
    border-radius: 20px;
    padding: 1.8rem;
    background: var(--surface);
    box-shadow: 0 30px 120px var(--shadow);
  }

  .panel__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 12px;
    color: var(--muted);
    margin: 0;
  }

  h1 {
    margin: 0.4rem 0;
  }

  .body {
    color: var(--muted);
    line-height: 1.6;
  }

  /* ---- Posts Container: 2 Layout Modes ---- */
  .posts {
    margin-top: 1.2rem;
  }

  [data-layout="grid"] {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1rem;
  }

  [data-layout="list"] {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post[hidden] {
    display: none;
  }

  .post {
    display: block;
    border: 1px solid var(--stroke);
    border-radius: 14px;
    padding: 1rem;
    text-decoration: none;
    color: var(--text);
    background: var(--surface-raised);
    transition:
      transform 0.2s,
      border-color 0.2s,
      box-shadow 0.2s;
  }

  .post:hover {
    transform: translateY(-3px);
    border-color: var(--primary-border);
    box-shadow: 0 15px 80px var(--primary-glow);
  }

  .tags {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
    margin-top: 0.6rem;
  }

  .tags span {
    padding: 0.35rem 0.6rem;
    border-radius: 10px;
    background: var(--surface-tag);
    color: var(--muted);
    font-size: 0.85rem;
  }

  .muted {
    color: var(--muted);
  }

  @media (prefers-reduced-motion: reduce) {
    ::view-transition-group(*),
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation-duration: 0.01ms !important;
    }
  }
</style>
