---
interface Props {
  size?: number;
  class?: string;
}

const { size = 24, class: className } = Astro.props;
---

<div class:list={["github-icon", className]} style={`--size: ${size}px`}>
  <svg
    width={size}
    height={size}
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path
      class="body-path"
      d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
    ></path>
    <path class="tail-path" d="M9 18c-4.51 2-5-2-7-2"></path>
  </svg>
</div>

<style>
  .github-icon {
    display: inline-flex;
    cursor: pointer;
    width: var(--size);
    height: var(--size);
  }

  .github-icon svg {
    width: 100%;
    height: 100%;
  }

  .body-path {
    opacity: 1;
    stroke-dasharray: 1000;
    stroke-dashoffset: 0;
    transform-origin: center;
  }

  .tail-path {
    stroke-dasharray: 100;
    stroke-dashoffset: 0;
    transform-origin: center;
  }

  .github-icon:hover .body-path {
    animation: bodyDraw 0.4s ease-in-out;
  }

  .github-icon:hover .tail-path {
    animation: tailDraw 0.5s ease-in-out, tailWag 2.5s ease-in-out 0.5s infinite;
  }

  @keyframes bodyDraw {
    0% {
      opacity: 0;
      stroke-dashoffset: 1000;
      scale: 0.9;
    }
    100% {
      opacity: 1;
      stroke-dashoffset: 0;
      scale: 1;
    }
  }

  @keyframes tailDraw {
    0% {
      stroke-dashoffset: 100;
    }
    100% {
      stroke-dashoffset: 0;
    }
  }

  @keyframes tailWag {
    0%,
    100% {
      rotate: 0deg;
    }
    14% {
      rotate: -15deg;
    }
    28% {
      rotate: 15deg;
    }
    42% {
      rotate: -10deg;
    }
    56% {
      rotate: 10deg;
    }
    70% {
      rotate: -5deg;
    }
    84% {
      rotate: 5deg;
    }
  }
</style>
